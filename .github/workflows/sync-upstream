name: Sync with upstream
on:
  schedule:
    - cron: "0 0 * * *"

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2
      - name: Sync with upstream
        run: |
          git remote add upstream https://github.com/Yidadaa/ChatGPT-Next-Web.git
          git fetch upstream
          git checkout main
          git merge upstream/main
          git push
